{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "incremental": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
